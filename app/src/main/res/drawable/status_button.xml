<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:id="@+id/base_ring"
            android:shape="ring"
            android:innerRadiusRatio="5"
            android:thickness="@dimen/status_button_thickness" >

            <size
                android:height="@dimen/status_button_diameter"
                android:width="@dimen/status_button_diameter" />

            <solid
                android:color="@color/status_button_lapsed" />

        </shape>
    </item>

    <item>
        <shape android:id="@+id/progress_arc" />
    </item>

</layer-list>
