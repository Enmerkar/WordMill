<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center">

        <TextView android:id="@+id/main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_message"/>

        <TextView android:id="@+id/main_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_total"
            android:layout_below="@id/main_message"/>

        <TextView android:id="@+id/main_learned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/words_learned"
            android:layout_below="@id/main_total"/>

        <TextView android:id="@+id/main_lapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/words_lapsed"
            android:layout_below="@id/main_learned" />

        <TextView android:id="@+id/main_passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_revised"
            android:layout_below="@id/main_lapsed"/>

        <TextView android:id="@+id/main_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_affirmed"
            android:layout_below="@id/main_passed" />

    </RelativeLayout>

    <ImageView android:id="@+id/begin_round_view"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_gravity="center" />

    <View android:id="@+id/reverse_button_view"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

</LinearLayout>
