<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <View android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <TextView android:id="@+id/view_word"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3" />

    <TextView android:id="@+id/view_full"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3" />

    <TextView android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6" />

    <TextView android:id="@+id/view_trans"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6" />

    <LinearLayout android:id="@+id/view_check"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6">

        <Button android:id="@+id/button_check"
            android:layout_width="@dimen/button_width_long"
            android:layout_height="@dimen/button_height"
            android:text="@string/check_button"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/view_respond"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6"
        android:orientation="horizontal">

        <Button android:id="@+id/button_no"
            android:layout_width="@dimen/button_width_long"
            android:layout_height="@dimen/button_height"
            android:text="@string/no_button"/>

        <TextView
            android:layout_width="@dimen/button_gap"
            android:layout_height="@dimen/button_height" />

        <Button android:id="@+id/button_yes"
            android:layout_width="@dimen/button_width_long"
            android:layout_height="@dimen/button_height"
            android:text="@string/yes_button" />

    </LinearLayout>

    <ImageView android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

</LinearLayout>
